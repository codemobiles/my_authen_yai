<?xml version="1.0" encoding="utf-8"?>
<selector xmlns:android="http://schemas.android.com/apk/res/android" >
    <item android:state_pressed="true" >
        <shape android:shape="rectangle"  >
            <corners android:radius="3dp" />
            <stroke android:width="1dp" android:color="#00ffffff" />
            <gradient android:angle="-90" android:startColor="#209134" android:endColor="#0b4e17"  />
        </shape>
    </item>
    <item android:state_focused="true">
        <shape android:shape="rectangle"  >
            <corners android:radius="3dp" />
            <stroke android:width="1dp" android:color="#33c14d" />
            <solid android:color="#33c14d"/>
        </shape>
    </item>
    <item >
        <shape android:shape="rectangle"  >
            <corners android:radius="3dp" />
            <stroke android:width="1dp" android:color="#00ffffff" />
            <gradient android:angle="-90" android:startColor="#64ed7c" android:endColor="#33c14d" />
        </shape>
    </item>
</selector>